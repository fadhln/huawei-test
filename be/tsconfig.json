    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
